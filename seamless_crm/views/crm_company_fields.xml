<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="crm_lead_view_form__inherit">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Client details">
                    <group string="Information">
                        <field name="number_of_employees"/>
                        <field name="company_type"/>
                        <field name="customer_timeline"/>
                        <field name="system_used"/>
                        <field name="pain_points"/>
                        <field name="next_step"/>
                        <field name="contract_date"/>
                    </group>
                    <group class="mt48">
                        <field  name="decision_maker"/>
                        <field  name="documentation_needed"/>
                        <field name="feedback"/>
                        <field name="needed_to_close"/>
                        <field name="process_to_close"/>
                        <field name="status"/>
                        
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>